@model _5shop.Models.MoreDetailsViewModel
@{
    ViewBag.Title = "moreDetails";
}

<h2>Повеќе детали за нарачката</h2>
<br />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Производи</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Enumerable.Range(0, Model.products.Count))
        {
            <tr>
                <td>
                    <img src="@Model.products[i].imageUrl" alt="Product Image" class="img-thumbnail" style="width: 100px; height: 100px;" />
                </td>
                <td>@Model.products[i].name</td>              
            </tr>
        }
    </tbody>
</table>

<div class="container-fluid">
    <div class="row fs-5">
        <div class="col-3">Цена на нарачката:     </div>
        <strong class="col-2 text-end fs-4">@Model.shoppingCart.total</strong>
        <div class="col-7 text-start">мкд.</div>
    </div>
</div>

<div>
    <div class="form-group">
        <button class="btn btn-outline-dark">
            @Html.ActionLink("Назад кон сите нарачки", "orderHistory")
        </button>
    </div>
</div>
